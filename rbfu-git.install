post_install () {
  echo ""
  echo ">>> Add the following initialization line to a shell startup script"
  echo ">>> of your choosing (eg. $HOME/.bash_profile):"
  echo ""
  echo ">>> eval \"\$(rbfu --init --auto)\""
  echo ""
  echo ">>> Or, if you don't want RVM-style automatic version switching,"
  echo ">>> leave out the --auto parameter:"
  echo ">>> eval \"\$(rbfu --init)\""
  echo ""
}
